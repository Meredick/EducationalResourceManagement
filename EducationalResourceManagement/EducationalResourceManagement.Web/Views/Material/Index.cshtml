@model IEnumerable<EducationalResourceManagement.Domain.Entities.Material>

<h1>Material List</h1>
<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var material in Model)
        {
            <tr>
                <td>@material.Title</td>
                <td>@material.Description</td>
                <td>
                    <a asp-action="Details" asp-route-id="@material.Id">Details</a> |
                    <a asp-action="Edit" asp-route-id="@material.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@material.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="Create" class="btn btn-primary">Add New Material</a>

