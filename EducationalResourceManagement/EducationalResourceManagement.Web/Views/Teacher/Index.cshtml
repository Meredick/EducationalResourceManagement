@model IEnumerable<EducationalResourceManagement.Domain.Entities.Teacher>

@{
    ViewData["Title"] = "Teachers";
}

<h2>@ViewData["Title"]</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var teacher in Model)
        {
            <tr>
                <td>@teacher.Name</td>
                <td>
                    <a href="@Url.Action("Details", "Teacher", new { id = teacher.Id })">Details</a> |
                    <a href="@Url.Action("Edit", "Teacher", new { id = teacher.Id })">Edit</a> |
                    <a href="@Url.Action("Delete", "Teacher", new { id = teacher.Id })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
